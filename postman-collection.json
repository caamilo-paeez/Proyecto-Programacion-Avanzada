{
  "info": {
    "name": "Violet Backend API",
    "_postman_id": "abcd-1234-efgh-5678",
    "description": "CRUD completo para Dolls, Clientes y Cartas con Gin + GORM + SQLite (auto-asignación y flujo de estados)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    { "name": "Dolls - Listar", "request": { "method": "GET", "url": "http://localhost:8080/dolls" } },
    {
      "name": "Dolls - Crear",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"nombre\":\"Violet\",\"edad\":18,\"activo\":true\n}" },
        "url": "http://localhost:8080/dolls"
      }
    },
    { "name": "Dolls - Eliminar", "request": { "method": "DELETE", "url": "http://localhost:8080/dolls/1" } },

    { "name": "Clientes - Listar", "request": { "method": "GET", "url": "http://localhost:8080/clientes" } },
    {
      "name": "Clientes - Buscar por ciudad",
      "request": { "method": "GET", "url": "http://localhost:8080/clientes?ciudad=leiden" }
    },
    {
      "name": "Clientes - Crear",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"nombre\":\"Gilbert\",\"ciudad\":\"Leiden\",\"motivo\":\"Carta\",\"contacto\":\"gilbert@mail.com\"\n}" },
        "url": "http://localhost:8080/clientes"
      }
    },
    { "name": "Clientes - Eliminar", "request": { "method": "DELETE", "url": "http://localhost:8080/clientes/1" } },

    { "name": "Cartas - Listar", "request": { "method": "GET", "url": "http://localhost:8080/cartas" } },
    {
      "name": "Cartas - Crear (auto asigna Doll)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"cliente_id\":1,\n  \"fecha\":\"2025-08-20\",\n  \"contenido\":\"Querida ...\"\n}" },
        "url": "http://localhost:8080/cartas"
      }
    },
    {
      "name": "Cartas - Avanzar estado (borrador → revisado)",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"estado\":\"revisado\",\n  \"contenido\":\"Contenido revisado\"\n}" },
        "url": "http://localhost:8080/cartas/1"
      }
    },
    {
      "name": "Cartas - Avanzar estado (revisado → enviado)",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"estado\":\"enviado\",\n  \"contenido\":\"Contenido final\"\n}" },
        "url": "http://localhost:8080/cartas/1"
      }
    },
    { "name": "Cartas - Eliminar (solo borrador)", "request": { "method": "DELETE", "url": "http://localhost:8080/cartas/1" } },

    { "name": "Reporte por Doll", "request": { "method": "GET", "url": "http://localhost:8080/reportes/dolls/1" } }
  ]
}